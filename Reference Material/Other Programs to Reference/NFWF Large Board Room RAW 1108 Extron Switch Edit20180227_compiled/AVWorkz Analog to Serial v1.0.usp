/*******************************************************************************************
  DIGITAL, ANALOG and SERIAL INPUTS and OUTPUTS
  (Uncomment and declare inputs and outputs as needed)
*******************************************************************************************/
ANALOG_INPUT input;
STRING_OUTPUT output$;

CHANGE input
{
    IF(input = 0) {
		output$ = " ";
	}
    ELSE IF(input = 255) {
		output$ = " ";
	}		
	ELSE IF(input >= 1 && input <= 16 ) {
		output$ = ITOA(input);
	}
	ELSE {
		output$ = "-";
	}
}

